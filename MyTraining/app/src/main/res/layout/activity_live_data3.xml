<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".livedata.LiveDataTestActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_no_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LiveDataBus发送事件"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LiveDataBus发送粘性事件"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_forever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="给上个页面发送forever消息"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sticky_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LiveDataBus发送粘性事件(在跳转到新页面)"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="观察LiveDataBus在这个页面销毁后,下个页面能不能接受到粘性事件" />


</androidx.appcompat.widget.LinearLayoutCompat>